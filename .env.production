AWS_S3_BUCKET=liquor-aramac-assets

# ===========================================
# CHILEAN REGULATORY COMPLIANCE
# ===========================================
# Legal compliance for alcohol sales in Chile (Law 19.925)
REGULATORY_COMPLIANCE_ENABLED=true
AGE_VERIFICATION_STRICT_MODE=true
MINIMUM_AGE_YEARS=18
MAX_ORDER_QUANTITY_BOTTLES=12

# Restricted regions for alcohol delivery
RESTRICTED_REGIONS="Región de Magallanes,Región de Aysén"
DELIVERY_RESTRICTED_HOURS=22:00-08:00
REQUIRE_ID_VERIFICATION=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Application security and encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_minimum_32_chars
SESSION_SECRET=your_session_secret_minimum_64_chars

# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=150
SECURITY_HEADERS_STRICT=true

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
# Application logging configuration
LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_QUERY_LOGGING=false
LOG_TO_FILE=true
LOG_RETENTION_DAYS=30

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Administrative user management
ADMIN_EMAILS=admin@aramac.dev,manager@aramac.dev
SUPER_ADMIN_EMAIL=admin@aramac.dev
ADMIN_ROLE_ID=admin_role_id_from_clerk
MANAGER_ROLE_ID=manager_role_id_from_clerk

# ===========================================
# BACKUP & DATA MANAGEMENT
# ===========================================
# Automated backup configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/opt/liquor-aramac/backups

# Database backup configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# ===========================================
# CDN & PERFORMANCE OPTIMIZATION
# ===========================================
# Content Delivery Network configuration
NEXT_PUBLIC_CDN_URL=https://cdn.liquor.aramac.dev
IMAGE_OPTIMIZATION_ENABLED=true
COMPRESSION_ENABLED=true
CACHE_MAX_AGE=31536000

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true
CORE_WEB_VITALS_THRESHOLD_LCP=2500
CORE_WEB_VITALS_THRESHOLD_FID=100
CORE_WEB_VITALS_THRESHOLD_CLS=0.1

# ===========================================
# FEATURE FLAGS & EXPERIMENTAL
# ===========================================
# Feature toggles for production control
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_PROMOTIONS=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_GUEST_CHECKOUT=false
ENABLE_SUBSCRIPTION_PLANS=true
ENABLE_LOYALTY_PROGRAM=true

# Experimental features (use with caution)
ENABLE_REAL_TIME_INVENTORY=true
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_ADVANCED_FILTERING=true

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# WhatsApp Business API for customer support
WHATSAPP_BUSINESS_API_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_id

# Chilean shipping providers
CHILEXPRESS_API_KEY=your_chilexpress_api_key
CORREOS_CHILE_API_KEY=your_correos_chile_api_key

# Chilean payment providers
WEBPAY_COMMERCE_CODE=your_webpay_commerce_code
WEBPAY_API_KEY=your_webpay_api_key
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# ===========================================
# GRAFANA & PROMETHEUS MONITORING
# ===========================================
# Monitoring stack configuration
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
PROMETHEUS_RETENTION_TIME=30d
GRAFANA_SECRET_KEY=your_grafana_secret_key

# Alertmanager configuration
ALERTMANAGER_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
ALERTMANAGER_EMAIL_TO=alerts@aramac.dev
ALERTMANAGER_EMAIL_FROM=monitoring@liquor.aramac.dev

# ===========================================
# ENVIRONMENT VALIDATION
# ===========================================
# Required for environment validation script
REQUIRED_VARS=NEXT_PUBLIC_CONVEX_URL,NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY,CLERK_SECRET_KEY
OPTIONAL_VARS=STRIPE_SECRET_KEY,SENDGRID_API_KEY,CLOUDINARY_CLOUD_NAME

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Deployment and infrastructure settings
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=us-east-1
CONTAINER_REGISTRY=ghcr.io/kuromatsu
IMAGE_TAG=latest

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# SSL/TLS configuration
SSL_CERT_PATH=/etc/nginx/ssl/liquor.aramac.dev.crt
SSL_KEY_PATH=/etc/nginx/ssl/liquor.aramac.dev.key
SSL_FORCE_HTTPS=true

