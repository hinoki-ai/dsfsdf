# Environment Configuration Template for Liquor Store SaaS
# Copy this file to .env.local and fill in your actual values

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# CONVEX BACKEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_CONVEX_URL=your_convex_deployment_url
CONVEX_DEPLOYMENT=your_convex_deployment_name

# ===========================================
# CLERK AUTHENTICATION (CRITICAL - REQUIRED FOR MIDDLEWARE TO WORK)
# ===========================================
# ⚠️  IMPORTANT: Replace these with REAL keys from https://dashboard.clerk.com
# Using placeholder values will cause MIDDLEWARE_INVOCATION_FAILED errors
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_real_clerk_publishable_key_here
CLERK_SECRET_KEY=your_real_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/admin
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/admin

# ===========================================
# DIVINE PARSING ORACLE - I18N CONFIGURATION
# ===========================================
# Default locale for the application (es for Chilean Spanish)
NEXT_PUBLIC_DEFAULT_LOCALE=es
# Supported locales (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCALES=es,en
# Enable automatic language detection
NEXT_PUBLIC_ENABLE_LANGUAGE_DETECTION=true
# Chilean IP ranges for automatic Spanish detection
NEXT_PUBLIC_CHILEAN_IP_RANGES=190.196.,200.29.,191.112.,200.75.

# ===========================================
# DATABASE CONFIGURATION (Optional)
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/liquor_store
POSTGRES_PASSWORD=your_secure_postgres_password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@liquor.aramac.dev
FROM_NAME="Licorería ARAMAC"

# ===========================================
# PAYMENT PROCESSING (Optional)
# ===========================================
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# REGULATORY COMPLIANCE
# ===========================================
REGULATORY_ENABLED=true
AGE_VERIFICATION_STRICT=true
MAX_ORDER_QUANTITY=12
RESTRICTED_REGIONS=Región de Magallanes,Región de Aysén,Región de Arica y Parinacota,Región de Tarapacá

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
LOG_LEVEL=info
DEBUG_MODE=false

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_EMAILS=admin@aramac.dev,manager@aramac.dev
ADMIN_ROLE_ID=your_admin_role_id

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ===========================================
# CDN & PERFORMANCE
# ===========================================
NEXT_PUBLIC_CDN_URL=https://cdn.liquor.aramac.dev
IMAGE_OPTIMIZATION=true

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PROMOTIONS=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_GUEST_CHECKOUT=false